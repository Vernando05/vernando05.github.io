---
import Lottie from 'lottie-react';
import LottieSmiley from '../../public/svg/lottie.json';
import FormContact from '../components/FormContact';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact';
---
<BaseLayout pageTitle={pageTitle}>
  <div class="grid gap-4 pb-10 md:grid-cols-2 dark:text-white">
    <div>
      <h1 class="ml-3 max-w-96 text-7xl font-bold motion-translate-x-in-[60px] motion-opacity-in-0 motion-delay-1000 lg:max-w-2xl lg:text-9xl ">Iâ€™d Love to Hear from You</h1>
      <div class="flex flex-col justify-self-center motion-translate-x-in-[10px] motion-translate-y-in-[10px] motion-opacity-in-0 motion-delay-1000">
        <a href="mailto:vernan@vernandosimbolon.com" class="underline">vernan@vernandosimbolon.com</a>
        <p>
          or fill in the form
          <svg class="inline rotate-45 dark:fill-white" xmlns="http://www.w3.org/2000/svg" width="24" height="24"><path d="M11.293 4.707 17.586 11H4v2h13.586l-6.293 6.293 1.414 1.414L21.414 12l-8.707-8.707-1.414 1.414z" /></svg>
        </p>
      </div>
    </div>
    <div class="relative max-w-4xl">
      <div class="absolute -z-10 size-96 -translate-x-40 -translate-y-32 motion-translate-x-in-[50px] motion-opacity-in-0 motion-delay-[1.1s] lg:translate-y-12">
        <Lottie
          animationData={LottieSmiley}
          loop={true}
          client:only="true"
        />
      </div>
      <div>
        <FormContact
          className="mt-48 border-white px-4 motion-translate-x-in-[50px] motion-opacity-in-0 motion-delay-[0.8s] lg:mt-96 dark:border-black"
          client:only="true"
        />
      </div>
    </div>
  </div>
</BaseLayout>
<style is:global>
  #gsapDecorative1 {
    opacity: 0;
  }
</style>
