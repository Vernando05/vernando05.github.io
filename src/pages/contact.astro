---
import Lottie from 'lottie-react';
import LottieSmiley from '../../public/svg/lottie.json';
import FormContact from '../components/FormContact';
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact';
---
<BaseLayout pageTitle={pageTitle}>
  <div class="grid gap-4 py-10 md:grid-cols-2 dark:text-white">
    <div>
      <h1 class="mb-6 ml-3 max-w-96 text-5xl font-bold motion-translate-x-in-[60px] motion-opacity-in-0 motion-delay-1000 md:text-7xl lg:max-w-2xl lg:text-9xl ">Iâ€™d Love to Hear from You</h1>
      <div class="flex flex-col justify-self-center motion-translate-x-in-[10px] motion-translate-y-in-[10px] motion-opacity-in-0 motion-delay-1000">
        <a href="mailto:vernan@vernandosimbolon.com" class="underline">vernan@vernandosimbolon.com</a>
        <p>
          or fill in the form
          <img class="inline size-5 rotate-90 align-[-4px] md:rotate-45 md:align-[-3px] dark:invert" src="/svg/arrow.svg" alt="icon arrow" />
        </p>
      </div>
    </div>
    <div class="relative max-w-4xl">
      <div class="absolute -z-10 size-40 motion-translate-x-in-[50px] motion-opacity-in-0 motion-delay-[1.1s] md:size-96 md:-translate-x-40 md:-translate-y-32 lg:translate-y-12">
        <Lottie
          animationData={LottieSmiley}
          loop={true}
          client:only="true"
        />
      </div>
      <div>
        <FormContact
          className="mt-48 border-white px-4 motion-translate-x-in-[50px] motion-opacity-in-0 motion-delay-[0.8s] lg:mt-96 dark:border-black"
          client:only="true"
        />
      </div>
    </div>
  </div>
</BaseLayout>
<style is:global>
  #gsapDecorative1 {
    opacity: 0;
  }
</style>
